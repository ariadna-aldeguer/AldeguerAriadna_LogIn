<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"

    tools:context=".MainMenu">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/img_form_back"
            android:layout_width="408dp"
            android:layout_height="136dp"
            android:scaleType="fitXY"
            android:src="@drawable/back_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/buttom_square"
            android:backgroundTint="@color/pink"
            android:text="Button"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="31dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="410dp"
            android:layout_height="609dp"
            android:background="@drawable/login_backgraound"
            android:rotationX="0"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_form_back">

            <TextView
                android:id="@+id/txtAeroport"
                android:layout_width="302dp"
                android:layout_height="90dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="55dp"
                android:background="@drawable/custom_input_form"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="AEROPORT"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCity" />

            <EditText
                android:id="@+id/txtInputCountry"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginBottom="4dp"
                android:ems="10"
                android:fontFamily="@font/roboto_thin"
                android:hint="Enter your country destination"
                android:inputType="textPersonName"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtCountry"
                app:layout_constraintEnd_toEndOf="@+id/txtCountry"
                app:layout_constraintHorizontal_bias="0.521"
                app:layout_constraintStart_toStartOf="@+id/txtCountry" />

            <TextView
                android:id="@+id/txtCity"
                android:layout_width="302dp"
                android:layout_height="90dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="55dp"
                android:background="@drawable/custom_input_form"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="CITY"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtCountry" />

            <TextView
                android:id="@+id/txtCountry"
                android:layout_width="302dp"
                android:layout_height="90dp"
                android:layout_marginStart="54dp"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="55dp"
                android:background="@drawable/custom_input_form"
                android:drawablePadding="20dp"
                android:ems="10"
                android:fontFamily="@font/roboto_bold"
                android:inputType="textPersonName"
                android:paddingStart="30dp"
                android:paddingLeft="30dp"
                android:paddingTop="20dp"
                android:text="COUNTRY"
                android:textColor="@color/blue"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtSubFavorites" />

            <EditText
                android:id="@+id/txtInputAeroport"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:layout_marginBottom="12dp"
                android:ems="10"
                android:fontFamily="@font/roboto_thin"
                android:hint="Select your aeroport destination"
                android:inputType="textPersonName"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtAeroport"
                app:layout_constraintEnd_toEndOf="@+id/txtAeroport"
                app:layout_constraintStart_toStartOf="@+id/txtAeroport" />

            <EditText
                android:id="@+id/txtInputCity"
                android:layout_width="256dp"
                android:layout_height="48dp"
                android:ems="10"
                android:fontFamily="@font/roboto_thin"
                android:hint="Enter your city destination"
                android:inputType="textPersonName"
                android:textColor="@color/blue"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/txtCity"
                app:layout_constraintEnd_toEndOf="@+id/txtCity"
                app:layout_constraintStart_toStartOf="@+id/txtCity"
                app:layout_constraintTop_toTopOf="@+id/txtCity"
                app:layout_constraintVertical_bias="0.745" />

            <TextView
                android:id="@+id/txtSubFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto"
                android:text="Save your favorite places and never forget it"
                android:textColor="@color/blue"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.389"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtTitleFavorites" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="302dp"
                android:layout_height="53dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="52dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/roboto_bold"
                android:text="Add place"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.49"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtAeroport"
                tools:text="Add place" />

            <TextView
                android:id="@+id/txtTitleFavorites"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:fontFamily="@font/roboto_bold"
                android:shadowColor="@color/grey"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="2"
                android:text="Add your favorites"
                android:textColor="@color/blue"
                android:textSize="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.331"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="16dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>